<div class="container">
<div class="row">
	<div class="col s6">
		<h1>All Posts</h1>
	</div>
	<% if current_user %>
	<div class="col s6">
		<div class="right">
			<%= link_to '+ New Post', new_post_path, class:"btn green accent-4" %>
		</div>
	</div>
	<% end %>
</div>
	<div class="divider"></div>
	<div class="container">
			
		<div class="row">
		<% if @posts.any? %>
			<% @posts.each do |p| %>
				  <div class="col s4">
	          <div class="card medium indigo">
	            <div class="card-content white-text">
	              <span class="card-title"><%=p.title%></span>
	            </div>
	            <div class="card-action">
	            <%= link_to 'View Post', post_path(p) %>
	            <%if current_user%>
	            	<%= link_to 'Edit', edit_post_path(p) %>
	            <% end %>
	            </div>
	          </div>
	        </div>
			<% end %>
	      </div>
		<% else %>
			<h3>There are no posts to display.</h3>
			<%= link_to '+ New Post', new_post_path, class:"btn green accent-4" %>
		<% end %>
		<!-- </div>
	</div>	
	 -->
</div>